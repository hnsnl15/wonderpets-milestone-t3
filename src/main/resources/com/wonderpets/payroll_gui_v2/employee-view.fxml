<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="568.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="com.wonderpets.payroll_gui_v2.controller.employee.EmployeeController">
    <top>
        <AnchorPane prefHeight="80.0" prefWidth="1080.0" style="-fx-background-color: #32a85a;"
                    BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label layoutX="14.0" layoutY="32.0" text="Search Employee" textFill="WHITE">
                    <font>
                        <Font name="Arial" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="employeeTableSearchField" layoutX="135.0" layoutY="28.0" prefHeight="25.0"
                           prefWidth="200.0" promptText="Enter name or id"/>
            </children>
        </AnchorPane>
    </top>
    <center>
        <TableView fx:id="employeeTableView" maxWidth="1080.0" prefHeight="568.0" prefWidth="1080.0"
                   BorderPane.alignment="CENTER">
            <columns>
                <TableColumn id="employeeIdTableColumn" fx:id="employeeIdTableColumn" prefWidth="70.0" resizable="false"
                             sortable="false" text="ID"/>
                <TableColumn id="employeeTableFirstName" fx:id="employeeFirstNameTableColumn" minWidth="0.0"
                             prefWidth="170.0" resizable="false" sortable="false" text="First Name"/>
                <TableColumn id="employeeTableLastName" fx:id="employeeLastNameTableColumn" prefWidth="170.0"
                             resizable="false" sortable="false" text="Last Name"/>
                <TableColumn id="employeeTablePhoneNumber" fx:id="employeePhoneNumberTableColumn" minWidth="8.0"
                             prefWidth="170.0" resizable="false" sortable="false" text="Phone Number"/>
                <TableColumn id="employeeAddressTableColumn" fx:id="employeeAddressTableColumn" minWidth="0.0"
                             prefWidth="404.0" resizable="false" sortable="false" text="Address"/>
                <TableColumn fx:id="employeeTableAction" editable="false" minWidth="0.0" prefWidth="95.0"
                             resizable="false" sortable="false" text="Action"/>
            </columns>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
